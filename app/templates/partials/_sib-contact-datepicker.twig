<div class="sib-datepicker">
    <div class="sib-datepicker__title">
        Make a tentative appointment. We'll get back to you to confirm your time.
    </div>
    <div class="sib-datepicker__body">
        <div class="sib-contact__header">Date</div>
        <div class="sib-form-group">
            <input type="text"
                   name="fields[formDate]"
                   placeholder="Select a date"
                   class="sib-form__input-datepicker"
                   data-language="en"
                   value="{{ guestFormErrors is defined ? guestFormErrors.formDate : '' }}"
                   maxlength="10"
            />
        </div>
        <div class="sib-contact__header">Preferred time</div>
        <div class="sib-form-group form-group-dates">
            <div class="form-group-date">
                <input type="checkbox" name="fields[formTime][]" value="morning" id="formMorning">
                <label for="formMorning" class="sib-checkbox">
                    Morning
                </label>
            </div>
            <div class="form-group-date">
                <input type="checkbox" name="fields[formTime][]" value="afternoon" id="formAfternoon">
                <label for="formAfternoon" class="sib-checkbox">
                    Afternoon
                </label>
            </div>
        </div>
    </div>
</div>