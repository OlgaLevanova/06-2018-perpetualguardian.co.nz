<a class="popup-modal" href="#cart-modal"></a>
<div id="cart-modal" class="sib-modal">
    {% if( step == 1 ) or ( step == 2 ) %}
    <div class="sib-modal__pills">
        <button class="button button--modal
        {% if( step == 1 ) %}
        button--modal--active
        {% endif %}">
            <span class="icon-full"></span>
            <span>Shopping Cart</span>
        </button>
        <button class="button button--modal
        {% if( step == 2 ) %}
        button--modal--active
        {% endif %}">
            <span class="icon-delivery"></span>
            <span>Delivery</span>
        </button>
        <button class="button button--modal">
            <span class="icon-payment"></span>
            <span>Payment</span>
        </button>
    </div>
    {% endif %}
    <div class="sib-modal__body">
        {% if( step == 1 ) %}
        {% include 'partials/_cart-summary' %}
        {% endif %}
        {% if( step == 2 ) %}
            {% include 'partials/_cart-delivery' %}
        {% endif %}
    </div>
</div>
